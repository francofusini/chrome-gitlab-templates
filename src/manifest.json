{
  "manifest_version": 2,

  "name": "GitLab Description Templates as Forms",
  "description": "This extension allows the user to populate GitLab description templates as forms.",
  "version": "0.1",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["https://gitlab.twsfi.local/*/*/merge_requests/*"],
      "css": ["mystyles.css"],
      "js": ["jquery.js", "myscript.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage"
  ]
}